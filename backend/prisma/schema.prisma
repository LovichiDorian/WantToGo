generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  password    String?      // Hashed password (null for legacy deviceId users)
  name        String?
  shareCode   String       @unique @default(uuid()) // Code unique pour partager ses lieux
  places      Place[]
  friendships Friendship[] // Les amis que cet utilisateur a ajoutés
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Friendship {
  id            String   @id @default(uuid())
  userId        String   // L'utilisateur qui a ajouté l'ami
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  friendCode    String   // Le shareCode de l'ami
  friendName    String   // Nom de l'ami au moment de l'ajout
  color         String   // Couleur attribuée pour cet ami
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, friendCode]) // Un utilisateur ne peut ajouter le même ami qu'une fois
  @@index([userId])
}

model Place {
  id          String    @id @default(uuid())
  clientId    String?   // Temporary ID from client for reconciliation
  userId      String    
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name        String
  notes       String?   @db.Text
  latitude    Float
  longitude   Float
  address     String?
  tripDate    DateTime?
  
  photos      Photo[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime? // Soft delete for sync

  @@index([userId])
  @@index([updatedAt])
}

model Photo {
  id        String   @id @default(uuid())
  placeId   String
  place     Place    @relation(fields: [placeId], references: [id], onDelete: Cascade)
  
  filename  String   // Storage path or URL
  mimeType  String
  size      Int      
  
  createdAt DateTime @default(now())

  @@index([placeId])
}

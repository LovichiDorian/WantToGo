{
  "name": "WannaGo - Planificateur de Voyages",
  "short_name": "WannaGo",
  "description": "Enregistrez et partagez les lieux que vous voulez visiter. Planifiez vos voyages avec l'assistant IA.",
  "start_url": "/",
  "id": "/",
  "display": "standalone",
  "display_override": ["standalone", "minimal-ui"],
  "background_color": "#0a0a0a",
  "theme_color": "#3b82f6",
  "orientation": "portrait",
  "scope": "/",
  "lang": "fr",
  "dir": "ltr",
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-maskable-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "categories": ["travel", "navigation", "lifestyle", "social"],
  "shortcuts": [
    {
      "name": "Ajouter un lieu",
      "short_name": "Ajouter",
      "description": "Ajouter un nouveau lieu à visiter",
      "url": "/add",
      "icons": [{ "src": "/icons/icon-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "Voir la carte",
      "short_name": "Carte",
      "description": "Voir tous les lieux sur la carte",
      "url": "/map",
      "icons": [{ "src": "/icons/icon-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "Assistant IA",
      "short_name": "IA",
      "description": "Planifier un voyage avec l'assistant",
      "url": "/assistant",
      "icons": [{ "src": "/icons/icon-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "Mes amis",
      "short_name": "Amis",
      "description": "Gérer mes amis et voir leurs lieux",
      "url": "/friends",
      "icons": [{ "src": "/icons/icon-192x192.png", "sizes": "192x192" }]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "share_target": {
    "action": "/add",
    "method": "GET",
    "params": {
      "title": "name",
      "text": "notes",
      "url": "url"
    }
  }
}
